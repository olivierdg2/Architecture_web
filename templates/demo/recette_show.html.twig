{% extends 'base.html.twig' %}

{%block body %}
    <recette>
        <h2>{{recette.name}}</h2>
        <div class = "metadata">Ecrit le {{recette.createdAt | date('d/m/Y')}} à {{ recette.createdAt | date('H:i') }}</div>
        {% if recette.image != null %}
        <img src="{{ asset(recette.image) }}" width="20%" height="20%"></img>
        {% endif %}
        <div>
            <h3>Catégorie</h3>
            {{recette.category.name}}
        </div>
        <div class="content">
            <h3>Ingrédients</h3>
            <ul>
            {% for element in recette.Ingredients %}
                <li>{{ element.Ingredient }} : {{ element.Quantity}}</li>
            {% endfor %}
            </ul>
        </div>
        <div>
            <h3>Préparation</h3>
            <ul>
            {% for element in recette.Preparation %}
                <li>{{ element.Step }}</li>
            {% endfor %}
            </ul>
        </div>
    <recette>
{% endblock %}